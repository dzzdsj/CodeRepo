<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--    bean标签: 创建对象
            id:唯一标识
            class:要创建对象所在的类的全路径（包名称+类名称）
            -->
    <bean id="user" class="com.dzzdsj.spring6.iocxml.getbean.User"></bean>
    <bean id="user2" class="com.dzzdsj.spring6.iocxml.getbean.User"></bean>
<!--    使用接口实现类，而不是接口-->
    <bean id="userDaoImpl" class="com.dzzdsj.spring6.iocxml.getbean.UserDaoImpl"></bean>

</beans>